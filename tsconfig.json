{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": "src",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "declaration": true
  },
  "include": ["./src/**/*"]
}
