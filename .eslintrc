{
  "root": true,
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": ["plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": "off",
    "import/prefer-default-export": "off",
    "arrow-parens": ["error", "as-needed"],
    "implicit-arrow-linebreak": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-console": ["error", { "allow": ["warn", "error"] }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js"]
      }
    },
    "import/core-modules": ["phaser"]
  },
  "globals": {
    "Phaser": true
  }
}
